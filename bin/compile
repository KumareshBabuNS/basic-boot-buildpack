#!/usr/bin/env bash

set -e

this_file=$0
build_dir=$1

this_dir=`dirname $0`
cd ${this_dir}/../dependencies
deps_dir=`pwd`

vendor_dir=${build_dir}/vendor
mkdir -p ${vendor_dir}

echo "Extracting jre..."
cp ${deps_dir}/*.gz ${vendor_dir}/jre.tar.gz
cd ${vendor_dir}
tar -xzf jre.tar.gz

echo "installing agent..."
cp ${deps_dir}/*.jar ${build_dir}/agent.jar